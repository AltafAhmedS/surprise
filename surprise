<body>

    <div id="gameBox" class="container">
        <h2 id="question">Ready for a small surprise?</h2>
        <img id="displayImg" src="https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExNHJueW9qZnd6Z3B3Z3B3Z3B3Z3B3Z3B3Z3B3Z3B3Z3B3Z3B3Jm09ZTMv/3oriO0OEd9QIDdllqo/giphy.gif" alt="Cat">
        <div class="btn-container">
            <button id="yesBtn">YES</button>
            <button id="noBtn">NO</button>
        </div>
    </div>

    <div id="finalLetter" class="container hidden">
        <h1>Happy Birthday, My Love! ❤️</h1>
        <p>Every day with you feels like a small celebration, but today the world feels extra lucky because you were born.</p>
        <p>Thank you for filling my life with warmth and laughter. I adore your heart, your strength, and the way you make even ordinary moments beautiful.</p>
        <div style="display: flex; gap: 10px; justify-content: center; flex-wrap: wrap;">
            <img src="https://via.placeholder.com/150" alt="Memory 1">
            <img src="https://via.placeholder.com/150" alt="Memory 2">
        </div>
        <p><strong>With all my love, Always yours.</strong></p>
    </div>

    <script>
        const yesBtn = document.getElementById('yesBtn');
        const noBtn = document.getElementById('noBtn');
        const question = document.getElementById('question');
        const displayImg = document.getElementById('displayImg');
        const gameBox = document.getElementById('gameBox');
        const finalLetter = document.getElementById('finalLetter');

        let clickCount = 0;

        // When "No" is clicked, it behaves like the video
        noBtn.addEventListener('click', () => {
            if (clickCount === 0) {
                question.innerText = "HOW DARE YOU CLICK NO!";
                displayImg.src = "https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExOXAwaXN6Z3B3Z3B3Z3B3Z3B3Z3B3Z3B3Z3B3Z3B3Z3B3Jm09ZTMv/mlvseq9yvZhba/giphy.gif";
                noBtn.style.position = 'absolute';
                clickCount++;
            } else {
                // Make button run away
                const x = Math.random() * (window.innerWidth - 100);
                const y = Math.random() * (window.innerHeight - 50);
                noBtn.style.left = x + 'px';
                noBtn.style.top = y + 'px';
            }
        });

        // When "Yes" is clicked
        yesBtn.addEventListener('click', () => {
            if (question.innerText === "Ready for a small surprise?") {
                question.innerText = "Do you love me?";
                displayImg.src = "https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExNHJueW9qZnd6Z3B3Z3B3Z3B3Z3B3Z3B3Z3B3Z3B3Z3B3Z3B3Jm09ZTMv/MDJ9IbxxvDUQM/giphy.gif";
            } else {
                gameBox.classList.add('hidden');
                finalLetter.classList.remove('hidden');
                document.body.style.backgroundImage = "url('https://www.transparenttextures.com/patterns/pucker.png')";
            }
        });
    </script>
</body>
</html>
